@model string
@{
    var list = (IEnumerable<SelectListItem>)Hack121.Site.GroupManager.All().Select(g => new SelectListItem()
                {
                    Text = g.Name,
                    Value = g.Id,
                    Selected = g.Id.Equals(Model)
                }).OrderBy(i => i.Text);
    var modelName = Html.NameFor(x=>x).ToString();
}

@Html.DropDownListFor(m => m, selectList:list)